<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
            >

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/mp3Player3"
              android:text="Exercise text here"/>

    <fragment android:id="@+id/youtubePlayerFragment"
              android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>

    <com.androidteam.base.widget.Mp3Player
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mp3Player3"
        android:layout_below="@id/mp3Player2"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>